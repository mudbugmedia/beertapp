<div class="lg2-lg7">
  <div class="hero clearfix">
  <a href="/"><img src="/images/logo.png" alt="Beer Tap"></a>
  <h1>Your Personal Beer Journal</h1>
  </div>
</div>
<div class="clearfix"></div>
<div class="sign-in clearfix lg2-lg7 lg-padinfull md-all md-padinfull sm-all sm-padinfull">
  <h3>Sign in</h3>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="lg2-lg4"><%= f.label :email %><br />
  <%= f.email_field :email, :class=> "form-text", :placeholder => "Your Email Address", :autofocus => true %></div>

<div class="clearfix lg-hide"></div>

  <div class="lg5-lg7"><%= f.label :password %><br />
  <%= f.password_field :password, :class=> "form-text", :placeholder => "Your Password" %></div>

<div class="clearfix"></div>
<div class="sign-in-buttons">
  <div><%= f.submit "Sign in", :class => "button push-effect lg2-lg4" %></div>
<% end %>
<%= form_tag(user_guest_sign_in_path) do |f| %>
  <input type="submit" value="Sign in as a guest" class="button push-effect lg5-lg7" />
<% end %>
</div>
<div class="clearfix"></div>
<div class="actions">
<%= render "devise/shared/links" %>
</div>
</div>
