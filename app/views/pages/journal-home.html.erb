<script>
$('.all-content').hide();

var bgColor;
var effect = 'animated bounceIn'; /* bounceIn, bounceInUp, bounceInDown, bounceInLeft,
										 bounceInRight, rotateIn, rotateInUpLeft, rotateInDownLeft,
										 rotateInUpRight, rotateInDownRight  */

$('.tiles li').click(function(){
	$('.front, .back').hide();
	$('.tiles li').removeClass('active').hide().css('border','none');
	$(this).addClass('active').show();
	bgColor = $('.active .back').css('background-color');
	$('.tiles').css('background-color',bgColor);
	$('.close, .all-content').show();
	$('.responsive').append('<span class="close">save &amp; continue</span>').addClass(effect);
});


$('.responsive').on('click', '.close', function(){

	$('.close').remove();
	bgColor = $('.active .front').css('background-color');
	$('.responsive').removeClass(effect);
	$('.all-content').hide();
	$('.tiles li').removeClass('active').show().css({ 'border-bottom':'none',
													    'border-left':'none' });
	$('.front, .back').show();
	$('.tiles').css('background-color',bgColor);
});
</script>
